<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:text="From NAS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="332dp"
        android:layout_height="58dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:text="To NAS"
        app:layout_constraintBottom_toBottomOf="@id/button5"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="300dp"

        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="230dp"
        android:layout_height="47dp"

        android:hint="192.168.1.200/disk/"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@id/button"
        app:layout_constraintRight_toRightOf="parent" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputEditText2"
        android:layout_width="230dp"
        android:layout_height="47dp"

        android:layout_marginBottom="10dp"
        android:hint="/mnt/sdcard/DCIM/Camera/"
        android:saveEnabled="false"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/textInputEditText"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="34dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="From"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintLeft_toLeftOf="@id/button"
        app:layout_constraintRight_toLeftOf="@id/textInputEditText2"
        app:layout_constraintTop_toTopOf="@id/textInputEditText2" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputEditTextB"
        android:layout_width="230dp"
        android:layout_height="47dp"

        android:hint="disk/"
        app:layout_constraintBottom_toBottomOf="@id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintRight_toRightOf="parent" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputEditText2B"
        android:layout_width="230dp"
        android:layout_height="47dp"

        android:layout_marginBottom="10dp"
        android:hint="/mnt/sdcard/"
        app:layout_constraintBottom_toTopOf="@id/button5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/textInputEditTextB"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2B"
        android:layout_width="34dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="To"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintLeft_toLeftOf="@id/button5"
        app:layout_constraintRight_toLeftOf="@id/textInputEditText2B"
        app:layout_constraintTop_toTopOf="@id/textInputEditText2B" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Path Save"
     app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
      />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/ipaddress"
        android:layout_width="176dp"
        android:layout_height="47dp"
        android:hint="192.168.1.?"
        app:layout_constraintBottom_toTopOf="@id/textView2B"
        app:layout_constraintLeft_toRightOf="@id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAS IpAddress"
        app:layout_constraintBottom_toTopOf="@id/textView2B"
        app:layout_constraintRight_toLeftOf="@id/ipaddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button" />


</android.support.constraint.ConstraintLayout>
